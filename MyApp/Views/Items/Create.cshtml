@model MyApp.Models.Item;

@{
    ViewData["Title"] = "Create";
}

<h3>New Item</h3>

<div class="row col-md-8">
    <form asp-action="Create" method="post">  
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group mb-3">
            <label for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Price">Price</label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-warning">Back</a>
    </form>
</div>

